@model Alumno;
@{
    ViewData["Title"] = "Guardar";
}
<div class="card">
    <div class="card-header">
        <h1>Insertar Alumno</h1>
    </div>
    <div class="card-header">
        <form asp-action="Guardar" asp-controller="Alumno" method="post">
            <div class="form-group mb-2">
                <input asp-for="Nombres" type="text" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <input asp-for="ApePat" type="text" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <input asp-for="ApeMat" type="text" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <input asp-for="CURP" type="text" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <input asp-for="Telefono" type="text" class="form-control" />
            </div>
            <div class="form-group mb-2">
                @Html.DropDownListFor(model => model.IdGrupo1.Nombre , (List<SelectListItem>)ViewBag.Lista,"Seleccione un grupo: ");
            </div>
            <div class="form-group mb-2">
                <input asp-for="Nombres" type="text" class="form-control" />
            </div>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
    
</div>