@model Carrera;
@{
    ViewData["Title"] = "Agregar Carrera";
}
<div class="card">
    <div class="card-header">
        <h1>Agregar Carrera</h1>
    </div>
    <div class="card-header">
        <form asp-action="Guardar" asp-controller="Carrera" method="post">
            <div class="form-group mb-2">
                <label for="Nombre">Nombre: </label>
                <input asp-for="Nombre" type="text" name="Nombre" class="form-control" />
            </div> 
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>

</div>